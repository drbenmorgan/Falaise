####################################################################
[name="versatile_generator" type="genbb::single_particle_generator"]
#@config Particle with monokinetic energy;group=miscellaneous;variant=if_versatile

#@description Generated particle ("electron", "positron", "gamma", "alpha"):
particle_name : string = @variant(primary_event:generator/if_versatile/particle|"gamma")

#@description Mode ("energy_range", "gaussian_energy", "monokinetic", "spectrum"):
mode          : string = "monokinetic"

#@description Emission direction of the emitted particle (in 4xPi)
emission_direction : string = "randomized"

#@description The kinetic energy of the generated particle
energy        : real   = @variant(primary_event:generator/if_versatile/energy|1000.0 keV)


###############################################################
[name="electron.20keV" type="genbb::single_particle_generator"]
#@config Electron with monokinetic energy @ 20 keV;group=miscellaneous

#@description Generated particle ("electron", "positron", "gamma", "alpha"):
particle_name : string = "electron"

#@description Mode ("energy_range", "gaussian_energy", "monokinetic", "spectrum"):
mode          : string = "monokinetic"

#@description Flag to randomize the direction of the emitted particle (in 4xPi)
randomized_direction : boolean = 1

### Only for "monokinetic" mode:

#@description The kinetic energy of the generated particle
energy        : real   = 20.

#@description The kinetic energy unit
energy_unit   : string = "keV"


