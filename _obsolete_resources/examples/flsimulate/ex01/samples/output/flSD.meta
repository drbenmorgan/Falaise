# List of sections of configuration properties (datatools::multi_properties)

#@description Metadata associated to a flsimulate run
#@key_label "name"
#@meta_label "type"

[name="flsimulate" type="flsimulate::subsystem"]

#@config flsimulate basic system informations



#@description The simulation application used to produce Monte Carlo data
application : string = "flsimulate"



#@description The version of the simulation application
application.version : string = "3.0.0"



#@description Bayeux version
bayeux.version : string = "3.0.0"



#@description Activate digitization
doDigitization : boolean = 0



#@description Activate simulation
doSimulation : boolean = 1



#@description Metadata embedding flag
embeddedMetadata : boolean = 1



#@description Experimental setup URN
experimentalSetupUrn : string = "urn:snemo:demonstrator:setup:1.0"



#@description Falaise version
falaise.version : string = "3.0.0"



#@description Number of simulated events
numberOfEvents : integer = 10



#@description Run start timestamp
timestamp : string = "20170319T215811"



#@description User profile
userProfile : string = "normal"


[name="SimulationSubsystem" type="flsimulate::subsystem"]

#@config Simulation setup parameters



#@description Simulation setup URN
simulationSetupUrn : string = "urn:snemo:demonstrator:simulation:2.1"


[name="VariantSubsystem" type="flsimulate::subsystem"]

#@config Variant setup



#@description Variants setup configuration URN
configUrn : string = "urn:snemo:demonstrator:simulation:2.1:variants"



#@description Variants profile path
profile : string as path  = "vprofile.conf"


[name="ServicesSubsystem" type="flsimulate::subsystem"]

#@config Services configuration



#@description Services setup configuration URN
configUrn : string = "urn:snemo:demonstrator:simulation:2.1:services"


# End of list of sections of configuration properties (datatools::multi_properties)
